{{#if updateCityForm}}
  <h4>Update city</h4>
  <form>
    <div class="form-group">
      <label for="name"></label>
      {{input value=name id="name" placeholder=city.name}}
    </div>
    <div class="form-group">
      <label for="city"></label>
      {{input value=country id="country" placeholder=city.country}}
    </div>
    <button {{action 'update' city}}>Save</button>
  </form>
{{else}}
  <button {{action 'updateCityForm'}}>Update</button>
{{/if}}
